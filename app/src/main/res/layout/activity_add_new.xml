<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.databasetask.addNew">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/background"
        android:id="@+id/relativeLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enter New Data"
            android:id="@+id/textView2"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_name"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:hint="Enter Name" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_type"
        android:layout_below="@+id/et_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:hint="Enter Type" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_dailyValue"
        android:inputType="number"
        android:layout_below="@+id/et_type"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:hint="Daily Value" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_grams"
        android:inputType="number"
        android:layout_below="@+id/et_dailyValue"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:hint="Grams" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_introduction"
        android:layout_below="@+id/et_grams"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:hint="Introduction" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_details"
        android:layout_below="@+id/et_introduction"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:hint="Details" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_calories"
        android:inputType="number"
        android:layout_below="@+id/et_details"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:hint="Calories" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add pic"
        android:id="@+id/btn_addpic"
        android:layout_below="@+id/et_calories"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:onClick="addPic"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btn_save"
        android:layout_alignTop="@+id/btn_addpic"
        android:layout_alignRight="@+id/et_calories"
        android:layout_alignEnd="@+id/et_calories"
        android:onClick="saveData"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tv_path"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
